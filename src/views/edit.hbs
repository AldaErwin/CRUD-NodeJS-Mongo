<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white">
        <h1>Update a task</h1>
        <form action="/edit/{{task._id}}" method="POST">
          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="title"
              value="{{task.title}}"
              class="form-control rounded-2 bg-dark text-white"
            />
          </div>

          <div class="mb-3">
            <textarea
              name="description"
              id=""
              rows="3"
              placeholder="Add a description"
              class="form-control rounded-2 bg-dark text-white"
            >{{task.description}}
            </textarea>
          </div>
          <button>Update</button>
        </form>

      </div>
    </div>
  </div>
</div>